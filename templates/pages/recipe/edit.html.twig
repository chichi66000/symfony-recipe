{% extends "base.html.twig" %}
{% block title %}Symfony Recipe - Modification mes recettes{% endblock %}
{% block body %}
    <div class="container">
        <h1 class="mt-4">Modification de la recette</h1>
        <form name="recipe" method="post" encryption="multipart/form-data">
        {# {{ form_start(form) }} #}
            {# input Nom #}
            <div class="form-group">
                {{ form_label(form.name)}}
                {{ form_widget(form.name)}}
                <div class="form-error">
                    {{ form_errors(form.name) }}
                </div>
            </div>

            <div class="form-image" style="width: 32em">
                {{form_row(form.imageFile)}}
            </div>
            
            {# input time #}
            <div class="form-group">
                {{ form_label(form.time)}}
                {{ form_widget(form.time)}}
                <div class="form-error">
                    {{ form_errors(form.time) }}
                </div>
            </div>

            {# input difficulty #}
            <div class="form-group">
                {{ form_label(form.difficulty)}}
                {{ form_widget(form.difficulty)}}
                <div class="form-error">
                    {{ form_errors(form.difficulty) }}
                </div>
            </div>

            {# input description #}
            <div class="form-group">
                {{ form_label(form.description)}}
                {{ form_widget(form.description)}}
                <div class="form-error">
                    {{ form_errors(form.description) }}
                </div>
            </div>

            {# input nbPeople #}
            <div class="form-group">
                {{ form_label(form.nbPeople)}}
                {{ form_widget(form.nbPeople)}}
                <div class="form-error">
                    {{ form_errors(form.nbPeople) }}
                </div>
            </div>

            {# input price #}
            <div class="form-group">
                {{ form_label(form.price)}}
                {{ form_widget(form.price)}}
                <div class="form-error">
                    {{ form_errors(form.price) }}
                </div>
            </div>

            {# input favourite #}
            <div class="form-check mt-4">
                {{ form_widget(form.isFavorite)}}
                {{ form_label(form.isFavorite) }}
                <div class="form-error">
                {{ form_errors(form.isFavorite) }}
                </div>
            </div>
            

            {{ form_label(form.ingredients) }}
            <br>
            <div id="ingredients-wrapper " class="d-flex flex-column flex-sm-row flex-wrap">
                {% for field in form.ingredients %}
                    <div style="min-width: 10em;" class="">
                        {{ form_widget(field) }}
                        {{ form_label(field) }}
                    </div>
                {% endfor %}
            </div>
            
            {# button submit #}
            {# <div class="form-group">
                {{form_row(form.submit)}}
            </div> #}
            {{ form_row(form._token) }}
            <div>
                <button type="submit" id="recipe_submit" name="recipe[submit]" class="btn btn-primary mt-4">Modifier ma recette </button>
            </div

        </form>
        {# {{ form_end(form) }} #}
    </div>
{% endblock %}